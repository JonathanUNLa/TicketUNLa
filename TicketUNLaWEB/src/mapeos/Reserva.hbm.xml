<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="datos.Reserva" table="reserva">
		<id column="idReserva" name="idReserva">
			<generator class="identity"/>
		</id>
		<many-to-one name = "usuario" class = "datos.Usuario" column = "usuario" not-null = "true"/>
		<set name = "lstEntradas" table = "Entrada" order-by = "idEntrada asc"
		inverse = "true" lazy = "true" fetch = "select">
			<key column = "idEntrada" not-null = "true"/>
			<one-to-many class = "datos.Entrada"/>
		</set>
		<property column="precioTotal" name="precioTotal" type="double"/>
		<property column="entregado" name="entregado" type="boolean"/>
		
	</class>
</hibernate-mapping>