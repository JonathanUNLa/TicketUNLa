<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="datos.Auditorio" table="Auditorio">
		<id column="idAuditorio" name="idAuditorio">
			<generator class="identity"/>
		</id>
		<property column="nombre" name="nombre" type="string"/>
	
		<set name = "lstSecciones" table = "Seccion" order-by = "idSeccion asc"
		inverse = "true" lazy = "true" fetch = "select">
			<key column = "idAuditorio" not-null = "false"/>
			<one-to-many class = "datos.Seccion"/>
		</set>
			<many-to-one name = "tipoAuditorio" class = "datos.TipoAuditorio"
		column = "tipoAuditorio" not-null = "true"/>
	</class>
</hibernate-mapping>
