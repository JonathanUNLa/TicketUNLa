<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="datos.Entrada" table="entrada">
		<id column="idEntrada" name="idEntrada">
			<generator class="identity"/>
		</id>
		<many-to-one name = "seccion" class = "datos.Seccion" column = "seccion" not-null = "true" />
		<many-to-one name = "butaca" class = "datos.Butaca" column = "butaca" not-null = "true" />
		<many-to-one name = "usuario" class = "datos.Usuario" column = "usuario" not-null = "true" />
		<many-to-one name = "funcion" class = "datos.Funcion" column = "funcion" not-null = "true" />
		<property name="precioFinal" column="precioFinal" type="double"/>
			</class>
</hibernate-mapping>