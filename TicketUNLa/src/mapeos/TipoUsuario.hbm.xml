<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="datos.TipoUsuario" table="tipoUsuario">
		<id column="idTipoUsuario" name="idTipoUsuario">
			<generator class="identity"/>
		</id>
		<property column = "nombreTipo" name = "nombreTipo" type = "string" />	
		<many-to-one name = "auditorio" class = "datos.Auditorio" column = "auditorioUsuario" not-null = "false" />
			</class>
</hibernate-mapping>