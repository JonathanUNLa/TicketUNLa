<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="datos.CodigoDescuento" table="codigoDescuento">
		<id column="idCodigoDescuento" name="idCodigo">
			<generator class="identity"/>
		</id>
		<property column = "codigo" name = "codigo" type = "string" />
		<property column = "descuento" name = "descuento" type = "double" />	
	 	<many-to-one name = "seccion" class = "datos.Seccion" column = "seccionCod" not-null = "true"/>
		 <many-to-one name = "funcion" class = "datos.Funcion" column = "funcionCod" not-null = "true"/>
			</class>
</hibernate-mapping>