<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="datos.Butaca" table="Butaca">
		<id column="idButaca" name="idButaca">
			<generator class="identity"/>
		</id>
		<property column = "columna" name = "columna" type = "double" />
		<property column = "fila" name = "fila" type = "int" />	
	 <many-to-one name = "seccion" class = "datos.Seccion" column = "seccion" not-null = "true"/>
		
			</class>
</hibernate-mapping>