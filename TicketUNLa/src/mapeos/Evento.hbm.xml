<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="datos.Evento" table="Evento">
		<id column="idEvento" name="idEvento">
			<generator class="identity"/>
		</id>
		<property column="nombre" name="nombre" type="string"/>
		<many-to-one name = "auditorio" class = "datos.Auditorio"
		column = "auditorioEvento" not-null = "true"/>
				<set name = "lstFunciones" table = "Funcion" order-by = "idFuncion asc"
		inverse = "true" lazy = "true" fetch = "select">
			<key column = "idFuncion" not-null = "true"/>
			<one-to-many class = "datos.Funcion"/>
		</set>
	</class>
</hibernate-mapping>