<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="datos.Seccion" table="Seccion">
		<id column="idSeccion" name="idSeccion">
			<generator class="identity"/>
		</id>
		<property column="nombreSeccion" name="nombreSeccion" type="string"/>
		<property column="precioSeccion" name="precioSeccion" type="double"/>
		<many-to-one name = "auditorio" class = "datos.Auditorio" column = "auditorio" not-null = "true"/>
	</class>
</hibernate-mapping>